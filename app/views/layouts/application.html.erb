<!DOCTYPE html>
<html>
  <head>
    <title>Koç Sistem</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script>
$(document).ready(function(){
    $().click(function(){
        $(".collapse").collapse('toggle');
    });
    $(".btn btn-primary").click(function(){
        $(".collapse").collapse('toggle');
    });
});
</script>
  </head>

  <body>
    <% if signed_in?%>
    <nav class="navbar navbar-default" >
      <div class="container-fluid">
        <div class="navbar-header" >
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"></button>
            <%= link_to 'KoçSistem Bilgi Bankası', root_path, :class => 'navbar-brand'%>

        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <div class="dropdown">
              <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" style="margin-top:5px">
                <li>
                  <i class="glyphicon glyphicon-user"></i> <%= current_user.name  %>
                </li>
              </button>
              <ul class="dropdown-menu">
                <li><%= link_to "Profilimi Görüntüle", user_path(current_user) %></li>
                <li><%= link_to "Oturumu Kapat", logout_path, method: :delete %></li>
              </ul>
            </div>
          </ul>
        </div>
      </div>
    </nav>

      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-2" >
            <ul class="nav nav-pills nav-stacked">
              <li><%= link_to 'Dashboard', root_path%></li>
              <li><%= link_to 'Müşteriler', customers_path%></li>
              <li><%= link_to 'Cihazlar', devices_path%></li>
              <li><%= link_to 'Çözümler' , solutions_path%></li>
          </ul><br>
        </div>

          <div class="col-sm-10">
            <%= yield %>
          </div>
        </div>
      </div>

      <% else %>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header" >
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"></button>
              <%= link_to 'KoçSistem Bilgi Bankası', login_path, :class => 'navbar-brand'%>
          </div>

          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to 'Kaydol', register_path%></li>
              <li><%= link_to 'Oturum Aç', login_path%></li>
            </ul>
          </div>
        </div>
      </nav>
      <%= yield %>
          <% end %>
        </body>
</html>
