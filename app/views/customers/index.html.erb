<p id="notice"><%= notice %></p>
<div class="alert alert-info">
  <strong>Bilgi!</strong> Müşteri ismi, Sözleşme yöneticisi ve Sözleşme Numarasına göre arama yapılabilir.
</div>

<%= form_tag customers_path, :method => 'get', class:"navbar-form navbar-left" do %>


  <div class="form-group">
    <%= text_field_tag :search, params[:search], class: "form-control", placeholder:"Arama..."%>
  </div>
  <%= submit_tag "Ara", :name => nil, class:"btn btn-default" %>

<%end%>
<div class="panel panel-default">
  <div class="panel-heading"><h4>Müşteriler</h4></div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Logo</th>
          <th>Firma</th>
          <th>Tanım</th>
          <th>Sözleşme Yöneticisi</th>
          <th>Sözleşme Numarası</th>
          <th>Başlangıç Tarihi</th>
          <th>Bitiş Tarihi</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= image_tag customer.logo.url(:medium) %></td>
            <td><%= customer.name %></td>
            <td><%= customer.description %></td>
            <td><%= customer.sozlesme_yoneticisi %></td>
            <td><%= customer.sozlesme_no %></td>
            <td><%= customer.sozlesme_baslangıc %></td>
            <td><%= customer.sozlesme_bitis %></td>
            <td><%= link_to 'İncele', customer %></td>
            <td><%= link_to 'Düzenle', edit_customer_path(customer) %></td>
            <td><%= link_to 'Sil', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
 </table>
  </div>
</div>

<%= link_to 'Müşteri Ekle', new_customer_path, class:'btn btn-default' %><br><br>
