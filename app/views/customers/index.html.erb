<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">Müşteriler</div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Firma</th>
          <th>Tanım</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= customer.description %></td>
            <td><%= link_to 'İncele', customer %></td>
            <td><%= link_to 'Düzenle', edit_customer_path(customer) %></td>
            <td><%= link_to 'Sil', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
 </table>
  </div>
</div>


<br>

<%= link_to 'Müşteri Ekle', new_customer_path, class:'btn btn-default' %>
