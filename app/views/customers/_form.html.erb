<%= form_for(customer) do |f| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form class="form-horizontal">
    <div class="form-group">
      <label class="col-sm-2 control-label">Firma Logosu</label>
      <div class="col-sm-10">

        <%= f.file_field :logo, class:"form-control", id:"focusedInput"%><br> 
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Firma Adı</label>
      <div class="col-sm-10">

        <%= f.text_field :name, class:"form-control", id:"focusedInput"%><br>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Firma Tanımı</label>
      <div class="col-sm-10">
        <%= f.text_area :description, class:"form-control", id:"focusedInput"%><br>
      </div>
    </div>


      <div class="form-group">
        <label class="col-sm-2 control-label">Sözleşme Yöneticisi</label>
        <div class="col-sm-10">

          <%= f.text_field :sozlesme_yoneticisi, class:"form-control", id:"focusedInput"%><br>
        </div>
      </div>

        <div class="form-group">
          <label class="col-sm-2 control-label">Sözleşme Numarası</label>
          <div class="col-sm-10">

            <%= f.text_field :sozlesme_no, class:"form-control", id:"focusedInput"%><br>
          </div>
        </div>

            <div class="form-group">
              <label class="col-sm-2 control-label">Başlangıç Tarihi</label>
              <div class="col-sm-10">

                <%= f.date_field :sozlesme_baslangıc, class:"form-control", id:"focusedInput"%><br>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Bitiş Tarihi</label>
              <div class="col-sm-10">

                <%= f.date_field :sozlesme_bitis, class:"form-control", id:"focusedInput"%><br>
              </div>
            </div>







    <div class="actions">
      <%= f.submit class:"btn btn-default", value:"Müşteri Oluştur" %>

    </div>
<br>
  </form>
<% end %>
