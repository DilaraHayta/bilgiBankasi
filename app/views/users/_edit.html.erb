



    <div class="form-horizontal" style="background-color:white">
      <fieldset>

            <div class="row">
              <div class="col-md-12">
                <legend>
                  <center>

                <h1>Profil Düzenle</h1><br>
              </center>
            </legend><br>



    <%= form_for(current_user) do |f| %>

    <div class="form-group">
      <%= f.label "Ad", class:"col-md-4 control-label"%>
      <div class="col-md-4 inputGroupContainer">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <%= f.text_field :first_name,class:"form-control" ,placeholder:"Adınız" %>
        </div>
      </div>
    </div>

    <!-- Text input-->

    <div class="form-group">
    <%= f.label "Soyad", class:"col-md-4 control-label" %>
      <div class="col-md-4 inputGroupContainer">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <%= f.text_field :last_name,class:"form-control",placeholder:"Soyadınız" %>
        </div>
      </div>
    </div>


    <div class="form-group">
    <%= f.label "Profil Fotoğrafı", class:"col-md-4 control-label" %>
      <div class="col-md-4 inputGroupContainer">
        <div class="input-group">
          <span class="btn btn-default fileinput-button">Gözat...<i class="glyphicon glyphicon-file"></i>
          <%= f.file_field :avatar %></span>
        </div>
      </div>
    </div>


    <div class="form-group">
    <%= f.label "Parola", class:"col-md-4 control-label" %>
      <div class="col-md-4 inputGroupContainer">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <%= f.password_field :password,class:"form-control",placeholder:"Parolanızı Giriniz" %>
        </div>
      </div>
    </div>

    <div class="form-group">
    <%= f.label "Parola (Tekrar)", class:"col-md-4 control-label" %>
      <div class="col-md-4 inputGroupContainer">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <%= f.password_field :password_confirmation,class:"form-control",placeholder:"Paralonızı Tekrar Giriniz" %>
        </div>
      </div>
    </div>

    <div class="form-group">
    <%= f.label :email, class:"col-md-4 control-label" %>
      <div class="col-md-4 inputGroupContainer">
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <%= f.email_field :email,class:"form-control",placeholder:"E-Posta Adresiniz" %>
        </div>
      </div>
    </div>


    <div class="form-group">
      <label class="col-md-4 control-label"></label>
      <div class="col-md-4"><br>
        <%= f.submit "Değişiklikleri Kaydet", class: "btn btn-primary"%>
      </div>
    </div>
    <% end %>

  </div>
</div>
</fieldset>
</div>
