<p id="notice" style="color:red;text-align:center"><%= notice %></p>
<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-12 lead">Kullanıcı Profili<hr></div>
      </div>
      <div class="row">
	<div class="col-md-4 text-center">
          <%= image_tag current_user.avatar.url, class:"img-circle avatar avatar-original", style:"-webkit-user-select:none;
          display:block; margin:auto;", size:"150x150"%>
        </div>
        <div class="col-md-8">
          <div class="row">
            <div class="col-md-12">
              <h1 class="only-bottom-margin"><%= current_user.name %></h1><br>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8">
              <span class="text-muted">Email:</span> <%= current_user.email %><br>
              <span class="text-muted">Created:</span><%= current_user.created_at %><br>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <hr>


          <a data-toggle="collapse" data-parent="#accordion" href="#collapse4" class="btn btn-primary" ><i class="glyphicon glyphicon-pencil"></i> Profilimi Düzenle</a>
          <div id="collapse4" class="panel-collapse collapse">
            <div class="panel-body">
              <%=render 'edit'%>
            </div>
          </div>



          <%= link_to 'Hesabımı Sil', current_user , class:"btn btn-danger ", method: :delete, data:{confirm:"Hesabınızı silmek istediğinizden emin misisniz?"}%>
        </div>
      </div>
    </div>
  </div>
</div>
